<wnd:NonModalDialogWindow 
    x:Class="ConfigEditor.Windows.RegisterWriteConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:cfg="clr-namespace:StagWare.FanControl.Configurations;assembly=StagWare.FanControl.Configurations"
    xmlns:wnd="clr-namespace:ConfigEditor.Windows"
                          
    Title="Register write configuration" 
    Height="370" 
    Width="370"
    WindowStartupLocation="CenterOwner"
    Icon="/ConfigEditor;component/fan.ico">

    <wnd:NonModalDialogWindow.Resources>
        <ObjectDataProvider 
            x:Key="registerWriteModeValues" 
            MethodName="GetValues" 
            ObjectType="{x:Type sys:Enum}">
            
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="cfg:RegisterWriteMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider 
            x:Key="registerWriteOccasionValues"
            MethodName="GetValues" 
            ObjectType="{x:Type sys:Enum}">
            
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="cfg:RegisterWriteOccasion"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </wnd:NonModalDialogWindow.Resources>

    
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border 
            BorderThickness="0,0,0,1" 
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            
        <Grid 
            Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" 
            Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label 
                Content="Description:" 
                Margin="0,10,10,0" 
                VerticalAlignment="Top" 
                Grid.ColumnSpan="1" 
                HorizontalAlignment="Right" 
                Width="Auto" 
                Height="26"/>
            
            <TextBox 
                Height="23" 
                Margin="0,13,10,0" 
                TextWrapping="Wrap" 
                Text="{Binding Description}" 
                VerticalAlignment="Top" 
                Grid.Column="1"/>

            <Label 
                Content="Write mode:" 
                Margin="0,69,10,0" 
                VerticalAlignment="Top" 
                Grid.ColumnSpan="1" 
                HorizontalAlignment="Right" 
                Width="Auto" 
                Height="26"/>
            
            <ComboBox 
                Margin="0,73,0,0"
                VerticalAlignment="Top"
                Height="22"
                SelectedValue="{Binding WriteMode}"
                ItemsSource="{Binding Source={StaticResource registerWriteModeValues}}"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="125"/>

            <Label 
                Content="Write occasion:" 
                Margin="0,39,10,0" 
                VerticalAlignment="Top" 
                Grid.ColumnSpan="1" 
                HorizontalAlignment="Right" 
                Width="Auto"
                Height="26"/>
            
            <ComboBox 
                Margin="0,43,0,0" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Height="22"
                Width="125"
                SelectedValue="{Binding WriteOccasion}"
                ItemsSource="{Binding Source={StaticResource registerWriteOccasionValues}}" 
                HorizontalAlignment="Left"/>

            <Label 
                Content="Register:" 
                Margin="0,98,10,0"                    
                Grid.ColumnSpan="1" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right" 
                Width="Auto" 
                Height="26"/>

            <xctk:IntegerUpDown 
                Value="{Binding Register}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="0,102,0,0" 
                Grid.Column="1" 
                Width="70"                                 
                Height="22"                                 
                Minimum="0" 
                Maximum="255"/>

            <Label 
                Content="Value:" 
                Margin="0,127,10,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Width="Auto" 
                Height="26" 
                Grid.ColumnSpan="1"/>
            
            <xctk:IntegerUpDown 
                HorizontalAlignment="Left" 
                Value="{Binding Value}" 
                Margin="0,131,0,0" 
                Width="70" 
                Grid.Column="1" 
                Height="22" 
                VerticalAlignment="Top" 
                Minimum="0" 
                Maximum="255"/>

            <GroupBox Margin="10,161,10,10" Grid.ColumnSpan="2">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox 
                            VerticalAlignment="Center" 
                            IsChecked="{Binding ResetRequired}"/>
                        
                        <Label 
                            Content="Reset on exit" 
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </GroupBox.Header>

                <Grid IsEnabled="{Binding ResetRequired}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label 
                        Content="Reset value:" 
                        Margin="0,36,10,0" 
                        VerticalAlignment="Top" 
                        Grid.ColumnSpan="1"
                        HorizontalAlignment="Right" 
                        Width="73" 
                        Height="26"/>
                    
                    <xctk:IntegerUpDown 
                        Value="{Binding ResetValue}"
                        Margin="0,38,0,0" 
                        Width="70"
                        Grid.Column="1"
                        Height="24" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        Minimum="0" 
                        Maximum="255"/>

                    <Label
                        Content="Reset write mode:"
                        Margin="0,5,10,0" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        Grid.ColumnSpan="1"  
                        Width="105" 
                        Height="26"/>
                    
                    <ComboBox 
                        Margin="0,9,0,0" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left"
                        Height="22" 
                        SelectedValue="{Binding ResetWriteMode}" 
                        ItemsSource="{Binding Source={StaticResource registerWriteModeValues}}" 
                        Grid.Column="1"                               
                        Width="125"/>
                </Grid>
            </GroupBox>            
        </Grid>
        </Border>

        <Grid 
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
            Grid.Row="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button 
                Content="OK" 
                HorizontalAlignment="Left" 
                Margin="3,0,0,13" 
                VerticalAlignment="Bottom" 
                Width="75" 
                Height="20" 
                Grid.Column="1" 
                Click="OK_Click"/>
            
            <Button 
                Content="Cancel" 
                Margin="83,0,0,13" 
                VerticalAlignment="Bottom" 
                Width="75" 
                Height="20" 
                Grid.Column="1" 
                HorizontalAlignment="Left"                    
                Click="Cancel_Click" />
        </Grid>
    </Grid>
</wnd:NonModalDialogWindow >
